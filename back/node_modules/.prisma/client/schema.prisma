generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/rfid?schema=public&timezone=America/Sao_Paulo"
}

model User {
  id             String           @id @default(uuid()) @map("user_id")
  tag            String           @unique
  name           String
  cpf            String           @unique
 
  Register_hours Register_hours[]

  @@map("user")
}

model Register_hours {
  id_register String   @id @default(uuid()) @map("register_id")
  id_user     String
  user        User     @relation(fields: [id_user], references: [id])
  input       DateTime @default(now())
  exit        DateTime ?
  active      Boolean ?  @default(false) 
  created_at  DateTime @default(now())
  updated_at  DateTime ?
  delete_at   DateTime ?

  @@map("Register_hours")
}
